{
	"name": "kroki-preview-vscode",
	"displayName": "%displayName%",
	"description": "%description%",
	"version": "0.0.10",
	"publisher": "chrisvandesteeg",
	"author": "Chris van de Steeg",
	"license": "MIT",
	"readme": "README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/csteeg/kroki-preview-vscode"
	},
	"galleryBanner": {
		"color": "#78d6f0",
		"theme": "light"
	},
	"bugs": "https://github.com/csteeg/kroki-preview-vscode/issues",
	"homepage": "https://github.com/csteeg/kroki-preview-vscode/",
	"icon": "icon.png",
	"main": "./dist/extension.js",
	"engines": {
		"vscode": "^1.91.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onFileSystem:file"
	],
	"contributes": {
		"commands": [
			{
				"command": "kroki.showPreview",
				"title": "%kroki.preview.title%",
				"category": "Kroki",
				"icon": {
					"light": "./media/Preview.svg",
					"dark": "./media/Preview_inverse.svg"
				}
			},
			{
				"command": "kroki.showPreviewToSide",
				"title": "%kroki.previewSide.title%",
				"category": "Kroki",
				"icon": {
					"light": "./media/PreviewOnRightPane_16x.svg",
					"dark": "./media/PreviewOnRightPane_16x_dark.svg"
				}
			},
			{
				"command": "kroki.showLockedPreviewToSide",
				"title": "%kroki.showLockedPreviewToSide.title%",
				"category": "Kroki",
				"icon": {
					"light": "./media/PreviewOnRightPane_16x.svg",
					"dark": "./media/PreviewOnRightPane_16x_dark.svg"
				}
			},
			{
				"command": "kroki.showSource",
				"title": "%kroki.showSource.title%",
				"category": "Kroki",
				"icon": {
					"light": "./media/ViewSource.svg",
					"dark": "./media/ViewSource_inverse.svg"
				}
			},
			{
				"command": "kroki.preview.refresh",
				"title": "%kroki.preview.refresh.title%",
				"category": "Kroki",
				"icon": {
					"light": "./media/refresh.svg",
					"dark": "./media/refresh_dark.svg"
				}
			},
			{
				"command": "kroki.preview.toggleLock",
				"title": "%kroki.preview.toggleLock.title%",
				"category": "Kroki",
				"icon": {
					"light": "./media/lock.svg",
					"dark": "./media/lock_dark.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "kroki.showPreviewToSide",
					"when": "kroki.previewCommandsEnabled && !kroki.PreviewFocus",
					"group": "navigation"
				},
				{
					"command": "kroki.showSource",
					"when": "kroki.PreviewFocus",
					"group": "navigation"
				},
				{
					"command": "kroki.preview.refresh",
					"when": "kroki.PreviewFocus",
					"group": "navigation"
				},
				{
					"command": "kroki.preview.toggleLock",
					"when": "kroki.PreviewFocus",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "kroki.showPreview",
					"when": "kroki.previewCommandsEnabled  && !kroki.PreviewFocus",
					"group": "navigation"
				},
				{
					"command": "kroki.showPreviewToSide",
					"when": "kroki.previewCommandsEnabled && !kroki.PreviewFocus",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"command": "kroki.showPreview",
					"when": "kroki.previewCommandsEnabled && !kroki.PreviewFocus",
					"group": "navigation"
				},
				{
					"command": "kroki.showPreviewToSide",
					"when": "kroki.previewCommandsEnabled && !kroki.PreviewFocus",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "kroki.showPreview",
					"when": "kroki.previewCommandsEnabled && !kroki.PreviewFocus",
					"group": "navigation"
				},
				{
					"command": "kroki.showPreviewToSide",
					"when": "kroki.previewCommandsEnabled && !kroki.PreviewFocus",
					"group": "navigation"
				},
				{
					"command": "kroki.showLockedPreviewToSide",
					"when": "kroki.previewCommandsEnabled && !kroki.PreviewFocus",
					"group": "navigation"
				},
				{
					"command": "kroki.showSource",
					"when": "kroki.PreviewFocus",
					"group": "navigation"
				},
				{
					"command": "kroki.preview.toggleLock",
					"when": "kroki.PreviewFocus"
				},
				{
					"command": "kroki.preview.refresh",
					"when": "kroki.PreviewFocus"
				}
			]
		},
		"keybindings": [
			{
				"command": "kroki.showPreview",
				"key": "shift+ctrl+v",
				"mac": "shift+cmd+v",
				"when": "kroki.previewCommandsEnabled && !kroki.PreviewFocus"
			},
			{
				"command": "kroki.showPreviewToSide",
				"key": "ctrl+k v",
				"mac": "cmd+k v",
				"when": "kroki.previewCommandsEnabled && !kroki.PreviewFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "HTML",
			"order": 20,
			"properties": {
				"kroki.supportedFiles": {
					"type": "array",
					"items": {
						"type": "object"
					},
					"default": [
						{
							"extension": ".dsl",
							"type": "structurizr"
						},
						{
							"extension": ".puml",
							"type": "plantuml"
						},
						{
							"extension": ".mmd",
							"type": "mermaid"
						},
						{
							"extension": ".mermaid",
							"type": "mermaid"
						},
						{
							"extension": ".dot",
							"type": "graphviz"
						},
						{
							"extension": ".actdiag",
							"type": "actdiag"
						},
						{
							"extension": ".blockdiag",
							"type": "blockdiag"
						},
						{
							"extension": ".c4plantuml",
							"type": "c4plantuml"
						},
						{
							"extension": ".ditaa",
							"type": "ditaa"
						},
						{
							"extension": ".erd",
							"type": "erd"
						},
						{
							"extension": ".nomnoml",
							"type": "nomnoml"
						},
						{
							"extension": ".nwdiag",
							"type": "nwdiag"
						},
						{
							"extension": ".seqdiag",
							"type": "seqdiag"
						},
						{
							"extension": ".svgbob",
							"type": "svgbob"
						},
						{
							"extension": ".symbolator",
							"type": "symbolator"
						},
						{
							"extension": ".umlet",
							"type": "umlet"
						},
						{
							"extension": ".vega",
							"type": "vega"
						},
						{
							"extension": ".vegalite",
							"type": "vegalite"
						},
						{
							"extension": ".bpmn",
							"type": "bpmn"
						},
						{
							"extension": ".bytefield",
							"type": "bytefield"
						},
						{
							"extension": ".d2",
							"type": "d2"
						},
						{
							"extension": ".dbml",
							"type": "dbml"
						},
						{
							"extension": ".excalidraw",
							"type": "excalidraw"
						},
						{
							"extension": ".pikchr",
							"type": "pikchr"
						},
						{
							"extension": ".tikz",
							"type": "tikz"
						},
						{
							"extension": ".wavedrom",
							"type": "wavedrom"
						},
						{
							"extension": ".wireviz",
							"type": "wireviz"
						}
					],
					"description": "File extensions supported by the Kroki previewer"
				}
			}
		}
	},
	"scripts": {
		"package": "vsce package --allow-star-activation",
		"prerelease": "vsce package --pre-release --allow-star-activation",
		"vscode:prepublish": "npm run compile:dist",
		"compile": "webpack --mode development --stats-error-details",
		"compile:dist": "webpack --mode production --devtool hidden-source-map",
		"watch": "webpack --mode development --stats-error-details --watch",
		"publish": "vsce publish --allow-star-activation",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"dependencies": {
		"axios": "^1.7.2",
		"cheerio": "1.0.0-rc.12",
		"lodash.throttle": "4.1.1",
		"vscode-nls": "5.2.0",
		"winston-transport-vscode": "^0.1.0"
	},
	"devDependencies": {
		"@studio/changes": "3.0.0",
		"@types/cheerio": "0.22.35",
		"@types/lodash.throttle": "4.1.9",
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@types/pako": "^2.0.3",
		"@types/vscode": "^1.91.0",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.11.0",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0",
		"eslint": "^8.57.0",
		"pako": "^2.1.0",
		"ts-loader": "^9.5.1",
		"typescript": "^5.4.5",
		"webpack": "^5.92.1",
		"webpack-cli": "^5.1.4"
	}
}